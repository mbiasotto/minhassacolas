{% extends 'mails/layouts/email.twig' %}

{% block content %}
<tr>
    <td valign="top" style="padding: 40px 20px 20px 20px; color: #333333; font-family: Arial, sans-serif; font-size: 16px; line-height: 24px;">
        <h1 style="margin: 0; color: #333333; font-size: 24px; font-weight: bold;">Novo Cadastro na Newsletter</h1>
        <p style="margin: 20px 0 0 0;">Um novo usuário se cadastrou na newsletter do site.</p>
    </td>
</tr>
<tr>
    <td align="center" valign="top" style="padding: 0 20px 20px 20px; color: #333333; font-family: Arial, sans-serif; font-size: 16px; line-height: 24px;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse: collapse; border: 1px solid #dddddd;">
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold; width: 30%;">Data:</td>
                <td style="padding: 10px 15px;">{{ d.data }}</td>
            </tr>
            {% if d.nome %}
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">Nome:</td>
                <td style="padding: 10px 15px;">{{ d.nome }}</td>
            </tr>
            {% endif %}
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">E-mail:</td>
                <td style="padding: 10px 15px;"><a href="mailto:{{ d.email }}" style="color: #0066cc;">{{ d.email }}</a></td>
            </tr>
            {% if d.telefone %}
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">Telefone:</td>
                <td style="padding: 10px 15px;">
                    <a href="https://wa.me/55{{ d.telefone|replace({' ': '', '(': '', ')': '', '-': ''}) }}?text=Olá%20{{ d.nome|default('') }},%20vi%20que%20você%20se%20cadastrou%20em%20nossa%20newsletter.%20Como%20posso%20ajudá-lo?" 
                       target="_blank" 
                       style="color: #25D366; text-decoration: none;">
                        {{ d.telefone }}
                    </a>
                </td>
            </tr>
            {% endif %}
        </table>
    </td>
</tr>
<tr>
    <td valign="top" style="padding: 20px; color: #333333; font-family: Arial, sans-serif; font-size: 14px; line-height: 20px; background-color: #f9f9f9;">
        <h3 style="margin: 0 0 10px 0; color: #333333; font-size: 16px;">Próximos Passos:</h3>
        <ul style="margin: 0; padding-left: 20px;">
            <li>Entre em contato via WhatsApp se o telefone foi fornecido</li>
            <li>Adicione o e-mail à sua lista de marketing</li>
            <li>Envie materiais promocionais sobre sacolas personalizadas</li>
        </ul>
    </td>
</tr>
{% endblock %} 