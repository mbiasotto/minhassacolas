
{% block content %}
<tr>
    <td align="center" valign="top" style="padding: 40px 20px 20px 20px; color: #333333; font-family: Arial, sans-serif; font-size: 16px; line-height: 24px;">
        <h1 style="margin: 0; color: #333333; font-size: 24px; font-weight: bold; text-align: center;">Nova Mensagem de Contato</h1>
        <p style="margin: 20px 0 0 0;">Uma nova mensagem de contato foi enviada atrav√©s do site.</p>
    </td>
</tr>
<tr>
    <td align="center" valign="top" style="padding: 0 20px 20px 20px; color: #333333; font-family: Arial, sans-serif; font-size: 16px; line-height: 24px;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse: collapse; border: 1px solid #dddddd;">
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold; width: 30%;">Data:</td>
                <td style="padding: 10px 15px;">{{ d.data }}</td>
            </tr>
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">Nome:</td>
                <td style="padding: 10px 15px;">{{ d.nome }}</td>
            </tr>
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">E-mail:</td>
                <td style="padding: 10px 15px;"><a href="mailto:{{ d.email }}" style="color: #0066cc;">{{ d.email }}</a></td>
            </tr>
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">Telefone:</td>
                <td style="padding: 10px 15px;">{{ d.telefone }}</td>
            </tr>
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">Empresa:</td>
                <td style="padding: 10px 15px;">{{ d.empresa }}</td>
            </tr>
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">Assunto:</td>
                <td style="padding: 10px 15px;">{{ d.subject }}</td>
            </tr>
            <tr>
                <td style="padding: 10px 15px; background-color: #f8f8f8; font-weight: bold;">Mensagem:</td>
                <td style="padding: 10px 15px;">{{ d.mensagem|nl2br }}</td>
            </tr>
        </table>
    </td>
</tr>
{% endblock %}
