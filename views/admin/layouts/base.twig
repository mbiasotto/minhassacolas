<body>
	<!-- WRAPPER -->
	<div id="wrapper">
		<!-- NAVBAR -->
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="brand">
				<a href="{{ url_for('app.home') }}"><img src="{{ base_path() }}/assets/admin/img/logo.png" class="logo"></a>
			</div>
			<div class="navbar-btn">
				<button type="button" class="btn-toggle-fullwidth" title="Menu"><i class="fa fa-bars" aria-hidden="true"></i></button>
			</div>
		</nav>
		<!-- END NAVBAR -->
		<!-- LEFT SIDEBAR -->
		<div id="sidebar-nav" class="sidebar">
			<div class="sidebar-scroll">
				<nav>
					<ul class="nav">
						<li><a href="{{ url_for('app.home') }}"  {{ page=='' ? 'class="active"' : '' }} ><i class="fa fa-home"></i> <span>Dashboard</span></a></li>
						<li><a href="{{ url_for('app.produtos') }}" {{ page=='produtos' ? 'class="active"' : '' }} ><i class="fa fa-angle-right"></i> <span>Produtos</span></a></li>
