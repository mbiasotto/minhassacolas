{% extends 'admin/layouts/base.twig' %}
{% block title %}{{ title }} > Edit - {% endblock %}

{% block content %}

<div id="subheader">
    <h3 class="page-title">{{ title | upper}}</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ url_for('app.home') }}">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
        </ol>
    </nav>
</div>

{% include "components/notifications.twig" %}

<form action="{{ url_for('app.usuarios.passwordUpdate', {'id': d.id} )}}" method="POST" enctype="multipart/form-data" id="validate">
<div class="panel">
    <div class="panel-body">
    
        <h3>DADOS</h3>
        <div class="row">
            <div class="form-group col-sm-4">
                <label for="signin-password">Nova senha</label>
                <div class="input-group">
                    <input type="password" name="senha" class="form-control show-pass" id="signin-password" placeholder="Senha" required minlength="4" maxlength="16">
                    <span class="input-group-addon" id="toggle-password" style="cursor: pointer;">
                        <i class="fa fa-eye"></i>
                    </span>
                </div>
            </div>
            <div class="form-group col-sm-4">
                <label for="signin-passwordc">Confirmar senha</label>
                <input type="password" name="senha_confirmar" class="form-control show-pass" id="signin-passwordc" placeholder="Confirmar senha" required minlength="4" maxlength="16">
            </div>
        </div>
        </div>

    </div>

    <div class="content-buttom">
        <button class="btn btn-primary btn-lg">SALVAR <i class="fa fa-chevron-circle-right" aria-hidden="true"></i></button>
        <div id="formErro"></div>
    </div>

</div>    

</form>



{% endblock %}

{% block js %}
<script>
		$(document).ready(function() {
			$("#toggle-password").on("click", function() {
				var passwordInput = $(".show-pass");
				var passwordType = passwordInput.attr("type");
				if (passwordType === "password") {
					passwordInput.attr("type", "text");
					$(this).find("i").removeClass("fa-eye").addClass("fa-eye-slash");
				} else {
					passwordInput.attr("type", "password");
					$(this).find("i").removeClass("fa-eye-slash").addClass("fa-eye");
				}
			});
		});
	</script>
{% endblock %}